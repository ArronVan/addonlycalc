<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.duele.addonlycalc.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/num0"
        android:onClick="num0Click"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/num9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/opequal"
        android:layout_below="@+id/num9"
        android:onClick="opEqualClick"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/opDisplay"
        android:layout_alignStart="@+id/opplus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/num7"
        android:layout_alignTop="@+id/num9"
        android:layout_alignParentStart="true"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/num8"
        android:layout_above="@+id/num0"
        android:layout_toEndOf="@+id/num7"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/num9"
        android:layout_alignTop="@+id/num8"
        android:layout_toEndOf="@+id/num8"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/num4"
        android:layout_above="@+id/num7"
        android:layout_alignParentStart="true"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/num5"
        android:layout_above="@+id/num7"
        android:layout_toEndOf="@+id/num4"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/num6"
        android:layout_above="@+id/num8"
        android:layout_toEndOf="@+id/num8"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/num1"
        android:layout_above="@+id/num4"
        android:layout_alignParentStart="true"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/num2"
        android:layout_above="@+id/num4"
        android:layout_toEndOf="@+id/num4"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/num3"
        android:layout_above="@+id/num6"
        android:layout_toEndOf="@+id/num2"
        android:onClick="numClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/opc"
        android:layout_above="@+id/num1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/num3"
        android:onClick="opCClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/opplus"
        android:layout_above="@+id/num0"
        android:layout_alignTop="@+id/opc"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/num9"
        android:onClick="opAddClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/numDisplay"
        android:layout_above="@+id/opc"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/num3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/opDisplay"
        android:layout_above="@+id/opplus"
        android:layout_alignEnd="@+id/opplus"
        android:layout_toEndOf="@+id/numDisplay" />
</RelativeLayout>
